@model MVCASPNET.Models.Contato

@{
    ViewData["Title"] = "Editar Contato";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="d-flex align-items-center mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary me-3">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <div class="flex-grow-1">
                    <h1 class="display-6 fw-bold text-warning mb-1">
                        <i class="bi bi-pencil-fill me-2"></i>Editar Contato
                    </h1>
                    <p class="text-muted mb-0">Atualize as informações do contato</p>
                </div>
                <div class="text-end">
                    <span class="badge bg-light text-dark fs-6 px-3 py-2">ID: #@Model.Id</span>
                </div>
            </div>

            <!-- Form Card -->
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-action="Editar">
                        <input asp-for="Id" type="hidden" />
                        
                        <div class="row">
                            <!-- Nome -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nome" class="form-label fw-semibold text-dark">
                                    <i class="bi bi-person me-2 text-warning"></i>Nome Completo
                                </label>
                                <input asp-for="Nome" class="form-control form-control-lg" 
                                       placeholder="Digite o nome completo" />
                                <span asp-validation-for="Nome" class="text-danger small"></span>
                            </div>

                            <!-- Telefone -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefone" class="form-label fw-semibold text-dark">
                                    <i class="bi bi-telephone me-2 text-warning"></i>Telefone
                                </label>
                                <input asp-for="Telefone" class="form-control form-control-lg" 
                                       placeholder="(00) 00000-0000" />
                                <span asp-validation-for="Telefone" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Status -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-dark mb-3">
                                <i class="bi bi-check-circle me-2 text-warning"></i>Status do Contato
                            </label>
                            <div class="form-check form-switch">
                                <input asp-for="Ativo" class="form-check-input" type="checkbox" 
                                       id="statusSwitch" style="width: 3rem; height: 1.5rem;">
                                <label class="form-check-label ms-2" for="statusSwitch">
                                    <span class="fw-semibold">Contato ativo</span>
                                    <small class="d-block text-muted">Contatos ativos aparecerão nas buscas</small>
                                </label>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex gap-2 pt-3 border-top">
                            <button type="submit" class="btn btn-warning btn-lg px-4 text-white">
                                <i class="bi bi-check-lg me-2"></i>Salvar Alterações
                            </button>
                            <a asp-action="Detalhes" asp-route-id="@Model.Id" class="btn btn-outline-info btn-lg px-4">
                                <i class="bi bi-eye me-2"></i>Ver Detalhes
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-x-lg me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- History Card -->
            <div class="card mt-4 bg-light border-0">
                <div class="card-body">
                    <h6 class="fw-semibold mb-2">
                        <i class="bi bi-clock-history text-warning me-2"></i>Histórico de Alterações
                    </h6>
                    <p class="mb-0 small text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        As alterações serão salvas imediatamente após confirmar.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>